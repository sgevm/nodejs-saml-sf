<html lang="en">
    <head>
        <%- include('./head'); %>
    </head>
    <body>
        <header>
            <%- include('./header', {homeTabState:"", sessionsTabState: "active", contactsTabState: ""}); %>
        </header>
        <main>
            <div class="container-fluid">
                <div class="row content">
                    <div class="col-sm-2 sidenav">
                        <!-- <p><a href="#">Link</a></p>
                        <p><a href="#">Link</a></p>
                        <p><a href="#">Link</a></p> -->
                    </div>         
                    <div class="col-sm-8 text-left">        
                        <section>
                            <p>Username: <%= user.username %></p>
                            <p>My SessionId: <%= sessionID %></p>
                            <h4>Sessions</h4>                     
                            <% if(typeof sessions !== 'undefined'){ %>
                                <% if(sessions){ %>
                                    <ul>
                                        <% for(var i=0; i < sessions.length; i++){ %>
                                           <li><%= sessions[i].id %> - <%= sessions[i].username %></li>
                                        <% }; %> 
                                    </ul>
                                    <a href="/clearsessions" class="btn btn-danger btn-md">Clear All Sessions</a>
                                <% } %>
                            <% } %>
                        </section>
                    </div>
                    <div class="col-sm-2 sidenav">
                        <!-- <div class="well">
                            <p>ADS</p>
                        </div>
                        <div class="well">
                            <p>ADS</p>
                        </div>             -->
                    </div>
                </div>
            </div>
        </main>
        <header>
            <%- include('./footer'); %>
        </header>                   
    </body>
</html>