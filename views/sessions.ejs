<html lang="en">
    <head>
        <%- include('./head'); %>
    </head>
    <body>
        <header>
            <%- include('./header', {homeTabState:"", sessionsTabState: "active", contactsTabState: "", oauthcontactsTabState: ""}); %>
        </header>
        <main>
            <div class="container-fluid">
                <div class="row content">
                    <div class="col-sm-2 sidenav">
                        <!-- <p><a href="#">Link</a></p>
                        <p><a href="#">Link</a></p>
                        <p><a href="#">Link</a></p> -->
                    </div>         
                    <div class="col-sm-8 text-left">        
                        <section>
                            <p>Username: <%= user.username %></p>
                            <p>My SessionId: <%= sessionID %></p>
                            <h4>Sessions</h4>                     
                            <% if(typeof sessions !== 'undefined'){ %>
                                <% if(sessions){ %>
                                    <table class="slds-table slds-table_cell-buffer slds-table_bordered slds-table_striped slds-table_col-bordered">
                                        <thead>
                                          <tr class="slds-line-height_reset">
                                            <th scope="col">Id</th>
                                            <th scope="col">Username</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                            <% for(var i=0; i < sessions.length; i++){ %>
                                                <tr>
                                                    <td><%= sessions[i].id %></td>
                                                    <td><%= sessions[i].username %></td>
                                                </tr>
                                          <% }; %> 
                                        </tbody>
                                      </table>                                           
                                    <a href="/clearsessions" class="btn btn-danger btn-md">Clear All Sessions</a>
                                <% } %>
                            <% } %>
                        </section>
                    </div>
                    <div class="col-sm-2 sidenav">
                        <!-- <div class="well">
                            <p>ADS</p>
                        </div>
                        <div class="well">
                            <p>ADS</p>
                        </div>             -->
                    </div>
                </div>
            </div>
        </main>
        <header>
            <%- include('./footer'); %>
        </header>                   
    </body>
</html>